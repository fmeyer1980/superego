{% extends "layouts/base.njk" %}
{% set pageCriticalStyles = ['css/page.css']%}
{% set metaTitle = cases.meta.title %}
{% set metaDesc = cases.meta.description %}
{% set bannerTitle = cases.title %}
{% set bannerSummary = cases.summary %}

{% block content %}
	{% include "partials/banner.njk" %}

	<div class="[ d-grid grid-cols-6 gap-800 pt-800 pb-800 ]">
		<article class="page-content [ flow ] [ span-6 md:span-3 lg:span-4 ]">
			{% if cases.mainImage %}<img width="480" height="158" sizes="(min-width: 48rem) 60vw, 90vw" src="{% croppedUrlFor cases.mainImage, 480, 267 %}" srcset="{% croppedUrlFor cases.mainImage, 480, 267 %} 480w, {% croppedUrlFor cases.mainImage, 768, 427 %} 768w, {% croppedUrlFor cases.mainImage, 1024, 569 %} 1024w, {% croppedUrlFor cases.mainImage, 1280, 711 %} 1280w, {% croppedUrlFor cases.mainImage, 1600, 890 %} 1600w" alt="{{ cases.mainImage.alt }}"/>
			{% endif %}
			{{ cases.body | markdownify | safe }}
		</article>
		<aside class="[ span-6 md:span-3 lg:span-2 ]">
			{% include "partials/contact-form.njk" %}
		</aside>
	</div>
{% endblock %}
